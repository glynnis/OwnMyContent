<div id="index_page">
  <div id="index_title">
    <p>Own Your Stuff!</p>
  </div>

  <div id="index_copy">
    <p>Own My Stuff is a service for locating and archiving your user created media on the web.</p>
  </div>

  <div id="index_user_widget">
    <% if current_user %>
      <%= link_to "Sign out", logout_path, id: "sign_out" %>
    <% else %>
      <%= link_to "Sign in with Dropbox", "/auth/dropbox_oauth2", id: "sign_in" %>
    <% end %>
  </div>

  <div id="index_about">
    <a href="/">about our project</a>
  </div>
</div>  