<div class="index_user_widget">
  <% if current_user %>
    <%= link_to "Sign out", logout_path, id: "sign_out" %>
  </br>
    <%= link_to "Your feeds", feeds_path %>
  <% else %>
    <%= link_to "Sign in with Dropbox", "/auth/dropbox_oauth2", id: "sign_in" %>
  <% end %>
</div>

<div class="index_page">

  <div class="logo">
    <!-- <img src="/misc_stuff.png" alt="An awesome image" /> -->
